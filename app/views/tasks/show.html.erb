<h1><%= @task.name %></h1>
<p><%= @task.details %></p>
<div class="task-control flex">
  <div class="control checkmark">
    <% if @task.completed %>
      <i class="far fa-check-square"></i>
    <% else %>
      <i class="far fa-square"></i>
    <% end %>
  </div>
  <div class="control edit">
    <i class="far fa-edit"></i>
  </div>
  <div class="control delete">
    <i class="far fa-trash-alt"></i>
  </div>
</div>
<%= link_to "back to todo list", tasks_path %>
